<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp">

        <TextView
            android:id="@+id/workingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:text=""
            android:textIsSelectable="true"
            android:textAlignment="textEnd"
            android:textColor="@color/secondaryTextColor"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/resultText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/secondaryTextColor"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/processText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/secondaryTextColor"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/resultText" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/Widget.App.CalculateButtonOperator"
            android:text="AC"
            android:onClick="allClear"
            android:id="@+id/allClear"
            android:layout_weight="3"/>

        <Button
            style="@style/Widget.App.CalculateButtonOperator"
            android:text="âŒ«"
            android:onClick="backSpace"
            android:id="@+id/backSpace"
            android:layout_weight="3"/>

        <Button
            style="@style/Widget.App.CalculateButtonOperator"
            android:text="+"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/Widget.App.CalculateButtonNumber"
            android:text="7" />

        <Button
            style="@style/Widget.App.CalculateButtonNumber"
            android:text="8" />

        <Button
            style="@style/Widget.App.CalculateButtonNumber"
            android:text="9" />
        <Button
            style="@style/Widget.App.CalculateButtonOperator"
            android:text="-" />

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/Widget.App.CalculateButtonNumber"
            android:text="4" />

        <Button
            style="@style/Widget.App.CalculateButtonNumber"
            android:text="5" />

        <Button
            style="@style/Widget.App.CalculateButtonNumber"
            android:text="6" />

        <Button
            style="@style/Widget.App.CalculateButtonOperator"
            android:text="/" />

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/Widget.App.CalculateButtonNumber"
            android:text="1" />

        <Button
            style="@style/Widget.App.CalculateButtonNumber"
            android:text="2" />

        <Button
            style="@style/Widget.App.CalculateButtonNumber"
            android:text="3" />

        <Button
            style="@style/Widget.App.CalculateButtonOperator"
            android:text="x" />

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/Widget.App.CalculateButtonNumber"
            android:text="." />

        <Button
            style="@style/Widget.App.CalculateButtonNumber"
            android:text="0" />

        <Button
            style="@style/Widget.App.CalculateButtonOperator"
            android:layout_weight="2"
            android:onClick="equalsButton"
            android:id="@+id/equalsButton"
            android:text="="/>

    </LinearLayout>


</LinearLayout>